#!/usr/bin/php
<?php
$html = "<html dir=rtl>
<head>
<title>ڕەشنووسەکانی ئاڵەکۆک</title>
<meta charset='utf-8'>
<meta name='viewport' content='width=device-width'>
<style>
body {
margin:1em;
font-size:1.15em;
}
a {
color:#00E;
text-decoration:none;
}
header {
font-size:1.3em;
}
pre {
white-space:pre-line;
word-wrap:break-word;
padding:1em;
border:.15em solid;
border-radius:2em;
margin-top:2em;
font-size:1.1em;
}
ltr {
direction:ltr;
display:block;
}
</style>
</head>
<body>
<header>
ڕەشنووسەکانم |
<a href='https://github.com/allekok/drafts'>کۆد</a> |
<a href='LICENSE'>مافی کۆپی</a>
</header>";
$output = "index.html";

$inputs = array_diff(scandir("."),
		     [".","..","dew","LICENSE","html",".git","index.html"]);
rsort($inputs);

foreach($inputs as $input) {
	$content = file_get_contents($input);
	$content = htmlspecialchars($content);
	$content = str_replace(["&lt;ltr&gt;", "&lt;/ltr&gt;"],
			       ["<ltr>", "</ltr>"], $content);
	$html .= "<pre>$content</pre>";
}

$html .= "</body></html>";

file_put_contents($output, $html);

/*
 * Local Variables:
 * mode: web
 * End:
 */
?>
