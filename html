#!/usr/bin/php
<?php
$output = "index.html";
$html = "<!DOCTYPE html>
<html dir='rtl' lang='ckb'>
<head>
<title>
ڕەشنووسەکانی ئاڵەکۆک
</title>
<meta charset='utf-8'>
<meta name='viewport' content='width=device-width'>
<style>
@font-face {
font-display:swap;
font-family:'NotoSansArabicUI';
src:url('NotoSansArabicUI-Regular.woff2') format('woff2');
}
body {
margin:.5rem;
font-family:'NotoSansArabicUI';
}
a {
color:#090;
text-decoration:none;
}
header {
margin:2rem 1rem;
}
header h1 {
font-size:2rem;
margin:0;
font-weight:normal;
}
header h1 sup {
font-size:1.2rem;
}
article {
word-wrap:break-word;
padding:1rem;
margin:1rem auto;
line-height:3;
border:.75rem solid #444;
border-radius:2rem;
max-width:800px;
}
article h1 {
margin-top:0;
}
article p {
text-align:justify;
}
.ltr {
display:block;
direction:ltr;
text-align:left;
font-family:monospace, 'NotoSansArabicUI';
font-size:1rem;
}
</style>
</head>
<body>
<header>
<h1>
ڕەشنووسەکانم 
<sup>
<a href='https://github.com/allekok/drafts'>
کۆد
</a>
</sup>
</h1>
</header>
<main>
";

$inputs = array_diff(scandir("."), [".", "..", "dew", "LICENSE", "html",
				    ".git", "index.html",
				    "NotoSansArabicUI-Regular.woff2"]);
rsort($inputs);

foreach($inputs as $input) {
	$f = fopen($input, "r");
	$title = explode("\t", read_line($f))[1];
	$time = explode("\t", read_line($f))[1];
	$content = read_file($f);
	fclose($f);
	$content = str_replace(["&lt;ltr&gt;", "&lt;/ltr&gt;", "\n\n"],
			       ["<span class='ltr'>", "</span>", "\n<br>\n"],
			       $content);
	$html .= "<article id='a$input'>\n" .
		 "<a class='link' href='#a$input'>\n" .
		 "<h1>\n$title</h1>\n" .
		 "</a>\n" .
		 "<p>$content</p>\n" .
		 "</article>\n";
}

$html .= "</main>
</body>
</html>";

file_put_contents($output, $html);

/* Functions */
function read_line($f) {
	return htmlspecialchars(fgets($f));
}
function read_file($f) {
	$content = "";
	while(!feof($f))
		$content .= read_line($f);
	return $content;
}

/*
 * Local Variables:
 * mode: web
 * End:
 */
?>
